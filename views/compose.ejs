<%- include('partials/header'); -%>

    <h1>Compose</h1>
    <form action="/compose" method="post">
        <div class="form-group">
            <label for="Title">Title</label>
            <input class="form-control" type="text" name="postTitle" autocomplete="off">
        </div>
        <div class="form-group">
            <label for="Composing">Post</label>
            <textarea class="form-control form-control-lg" rows="8" type="text" name="composedBlog" autocomplete="off"></textarea> 
        </div>
        <button class="btn btn-primary" type="submit">Publish</button>
    </form> 
<%- include('partials/footer'); -%>